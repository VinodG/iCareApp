<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/card_doctorsmall">

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_5">
        <RelativeLayout
            android:id="@+id/llforImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/clinics"
                android:scaleType="fitXY" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lldetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llforImage"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="@dimen/margin_15"
                android:textColor="@color/dark_blue2"
                android:paddingLeft="15dp"
                android:text="Uptown Mirdiff" />


            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/text_size_small_16"
                android:paddingLeft="15dp"
                android:text="Unit No.R # 37 | Uptown Mirdiff Mall" />


            <TextView
                android:id="@+id/tvTimings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/text_size_very_small_14"
                android:paddingLeft="15dp"
                android:text="Timing - Sat to Thur" />


            <TextView
                android:id="@+id/tvFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:paddingLeft="15dp"
                android:text="Fri : 3 PM to 11 PM"
                android:visibility="gone"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/ivDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lldetails"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/dir1" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

