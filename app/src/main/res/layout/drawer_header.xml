<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/llDrawerHeader"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#005aab"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/draweruser"
                android:layout_marginTop="@dimen/margin_9"
                android:layout_marginLeft="@dimen/margin_7"
                android:padding="@dimen/margin_10"
                android:visibility="gone"/>
          <!--  <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_cover"/>-->
        </RelativeLayout>
        <!--android:padding="@dimen/margin_very_small"-->

        <TextView
            android:id="@+id/tvUserNameLoggedIn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="dfnsadj sndfjasjd jsdjfajsd jfsdkfkas masadmfsadmkfk mfsdmfmsda"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/text_size_medium_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivDrawerClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/margin_15"
                android:src="@drawable/close_icare"
                android:background="?attr/selectableItemBackground"/>
            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>
        </LinearLayout>
    </LinearLayout>
    <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sep" />-->

</LinearLayout>