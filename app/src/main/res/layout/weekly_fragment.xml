<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_15">
        <ImageView
            android:id="@+id/ivLeftArrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_8"
            android:src="@drawable/left_arrow"/>
        <TextView
            android:id="@+id/tvdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Jun 14-Jun 20"/>
        <ImageView
            android:id="@+id/ivRightArrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin_8"
            android:src="@drawable/right_arrow"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llXAxis"
            android:layout_toRightOf="@+id/llYAxis"
            android:layout_marginLeft="-30dp"/>
        <LinearLayout
            android:id="@+id/llXAxis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tvXAxis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llYAxis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="-30dp">
            <TextView
                android:id="@+id/tvYAxis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/black"
                android:rotation="-90"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>