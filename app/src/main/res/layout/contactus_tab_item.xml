<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lldetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small_16"
                android:layout_margin="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_15"
                android:text="Uptown Mirdiff" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:textSize="@dimen/text_size_very_small_14"
                android:paddingLeft="15dp"
                android:maxLines="2"
                android:text="Unit No.R # 37 |\nUptown Mirdiff Mall" />

            <TextView
                android:id="@+id/tvTimings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:textSize="@dimen/text_size_very_small_12"
                android:paddingLeft="@dimen/margin_15"
                android:maxLines="2"
                android:text="Timing - Sat to Thur" />

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/margin_2"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_reminder"/>
    </LinearLayout>
</LinearLayout>

