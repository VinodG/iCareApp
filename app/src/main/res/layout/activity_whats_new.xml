    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/doctorsbg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/headerheight"
                    android:background="@android:color/transparent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivBackImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_15"
                        android:src="@drawable/menu_white" />

                    <TextView
                        android:id="@+id/tvtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="What's New"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_10"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/search"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/ivFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/filter"
                        android:visibility="gone" />
                </LinearLayout>


                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp" />


                <!-- <ImageView
                     android:id="@+id/iv_fab"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/dir"
                     android:layout_gravity="right"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNumOfPages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/tvViewPagerStatusInDoctorActivity" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tablayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_20"
                        android:background="@android:color/transparent"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:visibility="gone"
                        app:tabMode="scrollable"
                        app:tabPaddingBottom="@dimen/margin_5" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/vp_dashboard_circle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/margin_30"
                        android:padding="@dimen/margin_20"
                        app:fillColor="@color/gray_drak"
                        app:radius="3dp"
                        app:strokeColor="@color/gray_drak" />

                    <!--<LinearLayout
                        android:layout_width="match_parent"
