<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/statusbarblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDaySelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/day_select"
                android:gravity="center"
                android:text="Day"
                android:textColor="@color/statusbarblue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDayUnselect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/day_unselect"
                android:gravity="center"
                android:text="Day"
                android:textColor="@color/white"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/vertical_reminder" />

            <TextView
                android:id="@+id/tvWeekSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/week_select"
                android:gravity="center"
                android:text="Week"
                android:textColor="@color/statusbarblue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvWeekUnselect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/week_unselect"
                android:gravity="center"
                android:text="Week"
                android:textColor="@color/white"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/vertical_reminder" />

            <TextView
                android:id="@+id/tvMonthSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/month_select"
                android:gravity="center"
                android:text="Month"
                android:textColor="@color/statusbarblue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvMonthUnselect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/month_unselect"
                android:gravity="center"
                android:text="Month"
                android:textColor="@color/white"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/vertical_reminder" />

            <TextView
                android:id="@+id/tvYearSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/year_select"
                android:gravity="center"
                android:text="Year"
                android:textColor="@color/statusbarblue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvYearUnselect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/year_unselect"
                android:gravity="center"
                android:text="Year"
                android:textColor="@color/white"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin_8"
                android:text="Steps"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_16" />

            <TextView
                android:id="@+id/tvStepsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Average :  "
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_very_small_14" />

                <TextView
                    android:id="@+id/tvDailyAvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_very_small_14" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Today"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small_14" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llStepsPerHour"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@+id/llSteps" />

        <LinearLayout
            android:id="@+id/llStepsPerHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPerHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSteps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"
                android:rotation="-90"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_8"
        android:layout_weight="3"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_weight="1"
                android:text="Statistics"
                android:textColor="@color/statusbarred"
                android:textSize="@dimen/text_size_small_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="Last Week"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_small_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_weight="1"
                android:text="Highest"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:id="@+id/tvHighest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/green_dark"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/feedback_sep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_weight="1"
                android:text="Lowest"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:id="@+id/tvLowest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/feedback_sep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_weight="1"
                android:text="Average"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/text_size_very_small_14" />

            <TextView
                android:id="@+id/tvAverage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/statusbarred"
                android:textSize="@dimen/text_size_very_small_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>