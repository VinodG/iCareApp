<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#005aab"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_backpress"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="@dimen/margin_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_requestAppointment"
            android:layout_marginTop="@dimen/margin_20"
            android:text="Request Appointment"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_search"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@drawable/search"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#00FF7F"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_enterDatails"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#0000ff"
            android:text="Please enter Your deatails below"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/margin_10"
         android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Your First Nmae"
             android:gravity="center"
             android:drawablePadding="5dp"
             android:drawableLeft="@drawable/close_blue"
             android:layout_marginLeft="20dp"
             android:id="@+id/tv_firstname"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Last Name"
             android:layout_gravity="center"
             android:id="@+id/tv_lastname"/>


     </LinearLayout>



    </LinearLayout>

</LinearLayout>