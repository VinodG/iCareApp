<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        style="@style/AppTabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white"
        app:tabTextAppearance="@style/AppTabTextAppearance">
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_weight=".7">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
       >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY"
                android:textSize="@dimen/text_size_medium_18"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_8">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/cpbDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cpb_background_progressbar_color="@color/gray1"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progressbar_color="@color/statusbarred"
                        app:cpb_progressbar_width="2dp" />
                    <TextView
                        android:id="@+id/tvDayPer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="info %"
                        android:textColor="@color/statusbarred"
                        android:gravity="center"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvDayml"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ML \n00"
                    android:gravity="left"
                    android:textSize="@dimen/text_size_large_22"
                    android:textColor="@color/statusbarred"
                    android:layout_marginLeft="@dimen/margin_10"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_reminder"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvAvg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_medium_18"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_8">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/cpbAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cpb_background_progressbar_color="@color/gray1"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progressbar_color="@color/statusbarred"
                        app:cpb_progressbar_width="2dp" />
                    <TextView
                        android:id="@+id/tvAvgPer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="info %"
                        android:textColor="@color/statusbarred"
                        android:gravity="center"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvAvgml"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ML \n00"
                    android:textSize="@dimen/text_size_large_22"
                    android:gravity="left"
                    android:textColor="@color/statusbarred"
                    android:layout_marginLeft="@dimen/margin_10"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>